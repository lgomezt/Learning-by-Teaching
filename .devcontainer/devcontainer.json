{
  "name": "My App Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "backend",                // <-- change if your service has a different name
  "workspaceFolder": "/workspace",     // <-- must match the volume mount path
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.autoImportCompletions": true
      }
    }
  }
}